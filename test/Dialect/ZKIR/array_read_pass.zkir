zkir.func @arr_arr_mix_index(%a: !zkir.array<3 x index>) -> index {
  %c = index.constant 343245
  %d = index.constant 345
  %e = index.constant 2344
  %b = zkir.new_array %e, %c, %d: !zkir.array<3 x index>
  %i = index.constant 1
  %a1 = zkir.readarr %a[%i] : !zkir.array<3 x index>, index
  %a2 = zkir.readarr %a[%i] : !zkir.array<3 x index>, index
  %a3 = zkir.readarr %a[%i] : !zkir.array<3 x index>, index
  %r = zkir.new_array %a1, %a2, %a3, %c, %d, %e : !zkir.array<2x3 x index>
  %f = zkir.readarr %r[%i, %i] : !zkir.array<2 x3 x index>, index
  return %f: index
}
