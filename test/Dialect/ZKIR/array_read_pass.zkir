zkir.func @arr_mix_index(%a: index, %b: index) -> index {
  %c = index.constant 324
  %d = index.constant 999 
  %i = index.constant 0
  %r = zkir.new_array %a, %b, %c, %d: !zkir.array<4 x index>
  %v = zkir.readarr %r[%i] : !zkir.array<4 x index>, index
  return %v: index
}
