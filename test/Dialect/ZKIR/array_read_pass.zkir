// RUN: zkir-opt -split-input-file %s 2>&1 | FileCheck %s

zkir.func @arr_constant_index() -> index {
  %a = index.constant 45
  %b = index.constant 214
  %c = index.constant 2
  %r = zkir.new_array %a, %b, %c : !zkir.array<3 x index>
  %i = zkir.readarr %r[%c] : !zkir.array<3 x index>, index
  return %i: index
}
